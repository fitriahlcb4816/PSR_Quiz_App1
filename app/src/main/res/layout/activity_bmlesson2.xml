<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peribahasa"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:textColor="#2D2D2D" />

        <!-- Maksud Peribahasa Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maksud_peribahasa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <!-- Simpulan Bahasa Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            android:text="@string/peribahasa_merupakan_susunan_kata_yang_mempunyai_maksud_yang_tersirat_ia_digunakan_untuk_menyampaikan_teguran_nasihat_ingatan_atau_sindiran_dalam_bentuk_kiasan_yang_telah_diwarisi_sejak_zaman_dahulu"
            android:textColor="#555555"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simpulan_bahasa"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:divider="#CCCCCC"
            android:showDividers="middle">

            <!-- Header Row -->
            <TableRow android:background="#E0E0E0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Simpulan_bahasa"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maksud"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
            </TableRow>

            <!-- Data Rows -->
            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ajak_ajak_ayam"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="@string/tidak_bersungguh_sungguh_semasa_mengajak_seseorang"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anak_emas"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anak_yang_disayangi_oleh_ibu_bapa_atau_orang_atasan"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/batu_api"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/orang_yang_suka_menghasut_orang_lain"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>
        </TableLayout>

        <!-- Maksud Bidalan Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maksud_bidalan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <!-- Bidalan Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            android:text="@string/bidalan_merupakan_susun_kata_yang_sering_digunakan_untuk_memberikan_pengajaran_dan_nasihat"
            android:textColor="#555555"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bidalan"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:divider="#CCCCCC"
            android:showDividers="middle">

            <!-- Header Row -->
            <TableRow android:background="#E0E0E0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/maksud_"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contoh_ayat"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
            </TableRow>

            <!-- Data Rows -->
            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/biar_mati_anak_jangan_mati_adat"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="@string/orang_yang_kuat_berpegang_pada_adat"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/biar_putih_tulang_jangan_putih_mata"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lebih_baik_mati_daripada_tidak_dapat_apa_yang_diidam"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ada_udang_di_sebalik_batu"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ada_sesuatu_yang_dimahukan_di_sebalik_perkara_yang_dilakukan"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>
        </TableLayout>

        <!-- Maksud Peribahasa Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maksud_peribahasa_"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <!-- Simpulan Bahasa Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="16dp"
            android:text="@string/peribahasa_ialah_susunun_kata_yang_mempunyai_makna_yang_tertentu_dan_ianya_selalu_digunakan_untuk_menyampaikan_nasihat_teguran_atau_sindiran"
            android:textColor="#555555"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peribahasA"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#444444" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:divider="#CCCCCC"
            android:showDividers="middle">

            <!-- Header Row -->
            <TableRow android:background="#E0E0E0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peribahasa_"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/makna_peribahasa"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="#E0E0E0"
                    android:textColor="#000000" />
            </TableRow>

            <!-- Data Rows -->
            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/indah_khabar_dari_rupa"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:text="@string/perkara_yang_diceritakan_melebih_lebih_dari_penceritaan_yang_asal"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ukur_baju_di_badan_sendiri"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/melakukan_sesuatu_perkara_biarlah_berdasarkan_kemampuan_diri_sendiri"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>

            <TableRow android:background="#FAFAFA">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genggam_bara_api_biar_sampai_jadi_arang"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="#FAFAFA"
                    android:textColor="#333333" />
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/apabila_melakukan_sesuatu_pekerjaan_hendaklah_melakukan_sehingga_mencapai_kejayaan"
                        android:padding="8dp"
                        android:justificationMode="inter_word"
                        android:lineSpacingExtra="4dp"
                        android:textColor="#333333" />
                </HorizontalScrollView>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>
