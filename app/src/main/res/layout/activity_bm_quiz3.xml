<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Timer TextView with Icon -->
    <LinearLayout
        android:id="@+id/timerLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/timerTextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_01_00_"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:paddingStart="8dp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <!-- Quiz Progress -->
    <TextView
        android:id="@+id/progressTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_1_of_5_"
        android:textSize="18sp"
        android:textColor="#757575"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/timerLayout3" />

    <!-- Question Card -->
    <LinearLayout
        android:id="@+id/questionCard3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/progressTextView3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/questionTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question_"
            android:textSize="20sp"
            android:textColor="#333333"
            android:paddingBottom="12dp" />
    </LinearLayout>

    <!-- Options Card -->
    <LinearLayout
        android:id="@+id/optionsCard3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_below="@id/questionCard3"
        android:layout_marginBottom="24dp">

        <!-- RadioGroup for Options -->
        <RadioGroup
            android:id="@+id/optionsRadioGroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option1RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_1_"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option2RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_2_"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option3RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_3_"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option4RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_4_"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />
        </RadioGroup>
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#3F51B5"
        android:layout_below="@id/optionsCard3"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"/>

    <!-- Score TextView -->
    <TextView
        android:id="@+id/scoreTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_0_"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_below="@id/submitButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</RelativeLayout>
