<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Timer TextView with Icon -->
    <LinearLayout
        android:id="@+id/timerLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/timerTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_01_00___"
            android:textSize="20sp"
            android:textColor="#FF0000"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Quiz Progress -->
    <TextView
        android:id="@+id/progressTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 1 of 5"
        android:textSize="18sp"
        android:textColor="#757575"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/timerLayout4" />

    <!-- Question Card -->
    <LinearLayout
        android:id="@+id/questionCard4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/progressTextView4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/questionTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question?"
            android:textSize="20sp"
            android:textColor="#333333"
            android:paddingBottom="12dp" />
    </LinearLayout>

    <!-- Options Card -->
    <LinearLayout
        android:id="@+id/optionsCard4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_below="@id/questionCard4"
        android:layout_marginBottom="24dp">

        <!-- RadioGroup for Options -->
        <RadioGroup
            android:id="@+id/optionsRadioGroup4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/option1RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option2RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option3RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/option4RadioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:textSize="18sp"
                android:textColor="#555555"
                android:paddingVertical="8dp" />
        </RadioGroup>
    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#3F51B5"
        android:layout_below="@id/optionsCard4"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"/>

    <!-- Score TextView -->
    <TextView
        android:id="@+id/scoreTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_below="@id/submitButton4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

</RelativeLayout>
