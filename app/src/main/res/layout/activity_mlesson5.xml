<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MLesson5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentages"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solve the Problems - Percentage in Savings and Investments"
            android:textSize="18sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Savings is money or valuables saved and used when in need.\n\nInvestment is money used for specific business purposes such as buying shares or joining cooperatives that provide profits in the future."
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/subtitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- Situation 1 -->
        <TextView
            android:id="@+id/situation1TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Situation 1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/situation1DescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kevin saves RM1,000 in a bank. The bank gives an interest rate of 0.5% for the savings. Calculate the interest for his savings and the total amount of money that he will have."
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/situation1TitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- Solution -->
        <TextView
            android:id="@+id/solutionTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solution"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/situation1DescriptionTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/solutionDescriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Interest = RM1,000 × 0.5% = RM1,000 × (0.5 ÷ 100) = RM5\n\nTotal Amount = RM1,000 + RM5 = RM1,005"
            android:textSize="16sp"
            android:padding="12dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/solutionTitleTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
