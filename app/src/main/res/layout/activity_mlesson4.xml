<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/_0"
            tools:srcCompat="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Right Angle\n\nThe exact angle is 90°. Only right angles have a small square between the two lines."
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/_91"
            tools:srcCompat="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Acute Angle\n\nAn angle smaller than a right angle. An acute angle is an angle smaller than 90°."
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center" />


        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_80"
            tools:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Obtuse Angle\n\nAn angle greater than a right angle. Angle of deflection exceeds 90° but does not exceed 180°."
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/_60"
            tools:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Reflex Angle\n\nAn angle greater than the obtuse angle. The reflex angle exceeds 180° but does not exceed 360°."
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center" />

    </LinearLayout>
</ScrollView>
